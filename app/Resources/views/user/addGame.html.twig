{% extends 'base.html.twig' %}
{% import "macros.html.twig" as macro %}
{% block content %}
    <a class="btn btn-primary" href="{{ path('game_index') }}"><i class="fa fa-arrow-left"></i> My Game List</a>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Add games</h2>
            <hr>
        </div>
    </div>
    {{ form_start(form.game) }}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        {{ form_widget(form.game) }}
        </div>
    </div>

    <div class="row">
            <button title="Confirm" class="btn btn-success btn-block" type="submit"><i class="fa fa-check"></i>&nbsp; Confirm</button>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form.game) }}

{% endblock content %}
{% block javascripts %}
    {{ parent() }}


    <script type="text/javascript" src="{{ asset('asset/chosen2/dist/js/select2.min.js') }}"></script>
    <script type="text/javascript">
        $('select').select2({
            tags:true
        });
    </script>
{% endblock javascripts %}

