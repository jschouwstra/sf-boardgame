{% extends 'base.html.twig' %}
{% import "macros.html.twig" as macro %}
{% block content %}
    {{ macro.btnGoBack() }}
    {{ form_start(form.game) }}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Add Games To My List</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_widget(form.game) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {{ macro.btnSubmit() }}
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form.game) }}


{% endblock content %}
