{% extends 'base.html.twig' %}
{% import "macros.html.twig" as macro %}
{% block content %}

    <a class="btn btn-primary" href="{{ path('game_index') }}"><i class="fa fa-arrow-left"></i> My Game List</a>
    {% set playlogs = game.playlogs %}
    {% set currentUserId =  app.user.id %}

    <div class="row">
        <div class="col-md-8 col-md-offset-2 ">
            <div class="col-md-6 ">
                <h2>Game</h2>
                <hr>
                {{ game.name }}
            </div>


            {% set gamePlayedCount = [] %}

            {% for playlog in playlogs %}
                {#Get the playlog user_id so we count only the current user's playlogs#}
                {% set playlogUserId =  playlog.getuserid %}
                {% if playlogUserId == currentUserId %}
                    {#Make an array with only the playlogs of the user and the game#}
                    {% set gamePlayedCount = gamePlayedCount|merge([game.id]) %}
                {% endif %}
            {% endfor %}
            <div class="col-md-4">
                <h2>Playlogs <span class="badge">{{ gamePlayedCount|length }}</span></h2>
                <hr>
                <p>
                <div class="panel panel-default">
                    <div class="panel-body">

                        <a id="deleteBtn" class="btn btn-danger" href="#"><i class="fa fa-remove"></i> <span class="adaptiveText">Delete</span></a>
                        <a class="btn btn-primary"
                           href="{{ path('playlog_new', { 'gameId': game.id }) }}"><i class="fa fa-plus"></i> <span class="adaptiveText">Add Play</span>
                        </a>
                    </div>
                </div>
                </p>
                <form>
                    <ul class="list-group">
                        {% if gamePlayedCount|length > 0 %}
                        {% for playlog in game.playlogs %}
                            {% set playlogUserId =  playlog.getuserid %}
                            {% if playlogUserId == currentUserId %}
                                <label>
                                    <li class="list-group-item">
                                        <input name="playlog" type="checkbox" value="{{ playlog.Id }}"> {{ playlog.date|date('Y-m-d') }}
                                    </li>
                                </label>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </form>
                {% else %}
                    <div class="alert alert-info" role="alert">
                        <h3>Playlog list is empty </h3>
                        <p>You haven't played this game (yet).</p>
                        <p>
                            If you've played this game before, <a class="label label-info" href="{{ path('playlog_new', { 'gameId': game.id }) }}">you may log it here</a>
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {


            $('#deleteBtn').click(function () {

                var playlogs = [];

                //Add all checked boxes with corresponding id's to array "playlogs"
                $.each($("input[name='playlog']:checked"), function () {
                    playlogs.push($(this).val());
                });
                var confirmText = "Are you sure you want to delete the selected plays?";
                if (confirm(confirmText)) {
                    $.ajax({
                        type: "POST",
                        url: '{{ path('playlog_delete_bulk') }}',//path to the route of PlayLogController->deleteBulkAction method
                        data: JSON.stringify(playlogs),
//                        data: plays: playlogs,
                        success: function () {
//                            alert("selected playlogs: " + playlogs.join(", "));
                            window.location.reload();
                        },
                    });
                }
                return false;
            });

        });
    </script>
{% endblock javascripts %}