{% macro btnConfirm(data,class,icon,notification,text) %}
    <a title="{{ text }}" onclick="return confirm('{{ notification }}');" href="{{ data }}" class="{{ class }}"><i class="{{ icon }}"></i> <span class="adaptiveText">&nbsp;  {{ text }}</span></a>
{% endmacro %}

{% macro btnUniversal(data,class,icon,text) %}
    <a title="{{ text }}" href="{{ data }}" class="{{ class }}"><i class="{{ icon }}"></i> <span class="adaptiveText">&nbsp;  {{ text }}</span></a>
{% endmacro %}

{% macro btnGoBack() %}
    <button title="Ga terug" class="btn btn-base" onClick="goBack()"><i class="fa fa-arrow-left"></i><span class="adaptiveText">&nbsp; Go back</span></button>
{% endmacro %}
{% macro btnGoTo() %}
    <button class="btn btn-base"><i class="fa fa-arrow-left"></i><span class="adaptiveText">&nbsp; Go back</span></button>
{% endmacro %}

{% macro btnSubmit() %}
    <div class="btn-group pull-right">
        <button title="Confirm" class="btn btn-success" type="submit"><i class="fa fa-check"></i><span class="adaptiveText">&nbsp;Confirm</span></button>
    </div>
{% endmacro %}
