{% extends 'base.html.twig' %}

{% block content %}
    <h1>Playlog</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ playLog.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if playLog.date %}{{ playLog.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Gameid</th>
                <td>{{ playLog.gameId }}</td>
            </tr>
        </tbody>
    </table>


<ul>
    <li>
        <a href="{{ path('playlog_index') }}">Back to the list</a>
    </li>
        <li>
            <a href="{{ path('playlog_edit', { 'id': playLog.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
</ul>
{% endblock %}
