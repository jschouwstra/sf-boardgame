{% extends 'base.html.twig' %}

{% block content %}
    <h1>Playlogs list</h1>
    <hr>
    <div class="row">
        <div class="col-md-12 ">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <div class="btn-group pull-right">
                        {#<a class="btn btn-default btn-sm" href="{{ path('playlog_new') }}"><i class="fa fa-plus"></i> New playlog</a>#}
                    </div>
                </div>
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>Game</th>
                        <th>Date</th>

                        {#<th>{{ knp_pagination_sortable(Playlogs, 'Type', 'type.name') }}</th>#}
                        <th>Expansion</th>
                        <th>Actions</th>
                    </tr>

                        {% for playlog in playlogs |sortbyfield("date")|reverse %}
                            <tr>
                                <td><a href="{{ path('game_show', { 'id': playlog.game.id}) }}">{{ playlog.game.name }}</td>
                                <td>{{ playlog.date|date("Y-m-d") }}</td>
                                <td>
                                    {% if playlog.expansions | length > 0 %}
                                    {% for expansion in playlog.expansions  %}
                                        {{ expansion.name }}<br>
                                    {% endfor %}
                                    {% else %}
                                    None
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary" href="{{ path('playlog_show', { 'id': playlog.id }) }}"><i class="fa fa-search"></i> Show</a>
                                        <a class="btn btn-primary" href="{{ path('playlog_edit', { 'id': playlog.id }) }}"><i class="fa fa-pencil"></i> Edit</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                </table>
            </div>
        </div>
    </div>

{% endblock %}
