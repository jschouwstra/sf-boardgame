{% extends 'base.html.twig' %}

{% block content %}
    <h1>Playlogs list</h1>
    <hr>
    <div class="row">
        <div class="col-md-12 ">
            <div class="panel panel-primary">
                <div class="panel-heading clearfix">
                    <div class="btn-group pull-right">
                        {#<a class="btn btn-default btn-sm" href="{{ path('playlog_new') }}"><i class="fa fa-plus"></i> New playlog</a>#}
                    </div>
                </div>
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>Playlog</th>
                        {#<th>{{ knp_pagination_sortable(Playlogs, 'Type', 'type.name') }}</th>#}
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>

                    {% for playlog in playlogs %}
                        <tr>
                            <td><a href="{{ path('playlog_show', { 'id': playlog.id }) }}">{{ playlog.game.name }}</td>
                            <td>{{ playlog.date| date('M-d-Y')}}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    {#<a class="btn btn-primary" href="{{ path('playlog_show', { 'id': playlog.id }) }}"><i class="fa fa-search"></i> Show</a>#}

                                    <a class="btn btn-danger" href="{{ path('playlog_edit', { 'id': playlog.id }) }}"><i class="fa fa-remove"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
        </div>
    </div>

{% endblock %}
