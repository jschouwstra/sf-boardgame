{% extends 'base.html.twig' %}
{% import "macros.html.twig" as macro %}


{% block content %}
    <a class="btn btn-primary" href="{{ path('game_index') }}"><i class="fa fa-arrow-left"></i> My Game List</a>
    <div class="row">

        <div class="col-md-6 col-md-offset-3">
            <h1>Add play</h1>
            <h3>{{ playlog.game.name }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p>When did you play this game?</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form) }}
            <table class="table table-bordered">
                <tr>
                    <td>
                        Choose date
                    </td>
                    <td>
                        <div id="datepicker">
                            {{ form_widget(form.date) }}

                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ macro.btnSubmit() }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('asset/jquery-ui-1.12.1/jquery-ui.min.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function () {
                $('.datepicker').datepicker({
                    format: 'mm/dd/yyyy'
                });
                $('.datepicker').focus();
            }
        );
    </script>
{% endblock javascripts %}

