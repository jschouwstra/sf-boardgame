{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2>Games</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {{ games|length }} Games
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <table class="table table-bordered table-striped">
                <thead>
                    <th scope="col">Game</th>
                </thead>
                <tbody>
                {% for game in games %}
                    <tr>
                        <td data-label="Game"><a class="btn btn-default" style="width: 100%;" href="{{ path('game_show', { 'id': game.id }) }}" title="{{ game.name }}">{{ game.name }} </a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock content %}
