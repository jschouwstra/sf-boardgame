{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-4">
            <h2>Admin Dashboard</h2>
        </div>
    </div>
    <div class="well">
    <div class="row">
        <div class="col-md-4">
            <h2>Games</h2>
        </div>
        <div class="col-md-4">
            Total: {{latestGames|length  }}
        </div>
    </div>
    <div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading"><h4>Latest</h4></div>
            <div class="panel-body">
                <div class="list-group">
                    {%  for game in latestGames %}
                        <a href="{{ path('game_show',{ 'id': game.id } ) }}" class="list-group-item">{{ game.name }}</a>
                    {% endfor %}


                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="list-group">
            <a href="#" class="list-group-item active">Game</a>
            <a href="#" class="list-group-item "><i class="fa fa-list-alt"></i> List</a>
            <a href="{{ url('game_new_with_bgg_id') }}" class="list-group-item "><i class="fa fa-plus-square"></i> New</a>
        </div>
    </div>
    </div>
    </div>


{% endblock content %}