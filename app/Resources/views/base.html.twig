<!-- The #page-top ID is part of the scrolling feature - the data-spy and data-target are part of the built-in Bootstrap scrollspy function -->

<body id="page-top" class="background" data-spy="scroll" data-target=".navbar-fixed-top">
<div class="row pull-right" style="    position:fixed;
    margin-top: 100px;
    top: 0px;
    right: 0px;
    max-width: 50%;
    z-index:9999;
    border-radius:0px">
    <div class="col-md-12 ">
        {% for type, flashMessages in app.session.flashbag.all() %}
            {% for flashMessage in flashMessages %}
                <div class="alert alert-{{ type }} fadeAway">
                    <span></span> {{ flashMessage|raw }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% block navigation %}
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-default navbar-fixed-top" role="navigation">

        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a style="color: white;" class="navbar-brand page-scroll" href="{{ path('game_index') }}">
                <i style="color: #4c9ed9;" class="fa fa-th"></i>
                Tabletop Fans</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
                <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                <li class="hidden">
                    <a class="page-scroll" href="#page-top"></a>
                </li>
                {% if app.user.username is defined %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Game List <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('game_index') }}">My Game List</a></li>
                        <li><a href="{{ path('game_add') }}">Manage Game List</a></li>
                    </ul>
                </li>
                    <li class="dropdown">
                        <a href="{{ path('playlog_index') }}" class="dropdown-toggle"  role="button" aria-haspopup="true" aria-expanded="false">Plays</a>

                        <ul class="dropdown-menu">
                            <li><a href="{{ path('game_index') }}">My Game List</a></li>
                            <li><a href="{{ path('game_add') }}">Manage Game List</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('suggestion_show') }}" class="dropdown-toggle"  role="button" aria-haspopup="true" aria-expanded="false">Suggest Game</a>

                        <ul class="dropdown-menu">
                            <li><a href="{{ path('game_index') }}">My Game List</a></li>
                            <li><a href="{{ path('game_add') }}">Manage Game List</a></li>
                        </ul>
                    </li>



                {% endif %}

                {% if app.user.username is defined %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span style="text-transform: capitalize;">{{ app.user.username }}</span> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('user_dashboard') }}">Dashboard</a></li>
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                    </li>
                {% else %}
                {% endif %}
                {% block socialNavigation %}

                {% endblock socialNavigation %}


            </ul>

        </div>
    </nav>
{% endblock navigation %}


